                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding Name}">
                            <GridViewColumn.Header>
                                <GridViewColumnHeader MinWidth="100" Tag="Name" Click="RecipeViewerColumnHeader_Click">Name</GridViewColumnHeader>
